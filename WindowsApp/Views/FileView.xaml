<UserControl x:Class="WindowsApp.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowsApp"
             mc:Ignorable="d" 
             d:DesignHeight="350" Width="425">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="523*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="lb1" ItemsSource="{Binding Results}" HorizontalAlignment="Left" Height="244" Margin="10,96,0,0" VerticalAlignment="Top" Width="402"/>
        <Label x:Name="lbl2" Content="Result" HorizontalAlignment="Left" Margin="10,70,0,0" VerticalAlignment="Top" Width="156" FontWeight="Bold"/>
        <Label x:Name="lbl1" Content="Load File" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="156" FontWeight="Bold"/>
        <TextBox x:Name="tb1" Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="11,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="319"/>
        <Button x:Name="btn1" Command="{Binding LoadFile}" Content="Load" HorizontalAlignment="Left" Margin="340,36,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</UserControl>
